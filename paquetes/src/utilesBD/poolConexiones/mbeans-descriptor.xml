<?xml version="1.0"?>

<mbeans-descriptors>
  <mbean name="JPoolObjetosJMX"
         className="org.apache.catalina.mbeans.ClassNameMBean"
         description="Server statistics and configuration"
         domain="Catalina"
         type="utilesBD.poolConexiones.JPoolObjetosJMX">
    
    <attribute name="getConexion"
               description="Conexion a base datos"
               type="java.lang.String"
               writeable="false"/>
    <attribute name="getSQLActivas"
               description="Devuelve las conexiones activas o en cache sin usar"
               type="java.lang.String"
               writeable="false"/>
    <operation name="cerrarTodasConex"
               description="Cierra todas las conexiones"
               impact="ACTION"
               return="void">
    </operation>


  </mbean>
</mbeans-descriptors>